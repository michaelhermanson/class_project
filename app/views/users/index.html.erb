<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Motto</th>
    <th>Pet name</th>
    <th>Mood</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.motto %></td>
    <td><%= user.pet_name %></td>
    <td><%= user.mood %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

